    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src = "https://code.jquery.com/jquery.js"></script>

    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src = "/static/js/bootstrap.min.js"></script>
    <script type="application/javascript">
    </script>
</head>

<body>

<!-- See for doc on view helpers https://github.com/tanema/express-helpers/wiki
 The path to get to this page is http ... questions/preview?qid...  or http... tests/preview?tid&qid
 -->

 <a href="../questions/<%= qid %>">Edit This Question</a>
<% if (tid) { %>
<a href="<%= tid %>">Edit This Test</a>
<% } %>

 <br>
<% if (qobj.image) { %>
    <img src="../questions/<%= qid %>/img">
<% } %>

    <br>

<%- qobj.descr %>
 <br>  <br>
<% if (qobj.isShortAnswer()  ) { %>
<input type="text" name="answer">
    <% } else if (qobj.isLongAnswer() ) { %>
        <%- text_area_tag('answer','') %>
    <% } else { %>
    <table>
        <tr><td> <%- radio_tag('multiChoiceCorrectAnswer','a') %> </td> <td> <%= qobj.aAns %>  </td></tr>
        <% if (qobj.bAns) { %>
        <tr><td> <%- radio_tag('multiChoiceCorrectAnswer','b') %> </td> <td> <%= qobj.bAns %>  </td></tr>
        <% } %>
        <% if (qobj.cAns) { %>
        <tr><td> <%- radio_tag('multiChoiceCorrectAnswer','c') %> </td> <td> <%= qobj.cAns %>  </td></tr>
        <% } %>
        <% if (qobj.dAns) { %>
        <tr><td> <%- radio_tag('multiChoiceCorrectAnswer','d') %> </td> <td> <%= qobj.dAns %>  </td></tr>
        <% } %>
        <% if (qobj.eAns) { %>
        <tr><td> <%- radio_tag('multiChoiceCorrectAnswer','e') %> </td> <td> <%= qobj.eAns %>  </td></tr>
        <% } %>


    </table>
    <% } %>
 <br>
<% if (tid) { %>
<a href="preview?tid=<%= tid %>&qid=<%= qid %>">Next Question</a>
<% } %>


</body>
</html>
