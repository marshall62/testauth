    <% if (qobj.answer == 'a') { %>
        <tr><td> <%- radio_tag('multiChoiceCorrectAnswer','a', {checked: true}) %> </td><td> Choice A: </td> <td> <%- text_field_tag('aAns',{value:qobj.aAns, size:60}) %> </td></tr>
    <% } else { %>
        <tr><td> <%- radio_tag('multiChoiceCorrectAnswer','a') %> </td><td> Choice A: </td> <td> <%- text_field_tag('aAns',{value:qobj.aAns, size:60}) %>  </td></tr>
        <br/>
    <% } %>
