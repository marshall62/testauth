        <% } else  { %>
        <tr><td> <%- radio_tag('multiChoiceCorrectAnswer','c') %> </td><td> Choice C: </td> <td> <%- text_field_tag('cAns',{value:qobj.cAns, size:60}) %>  </td></tr>
        <br/>
        <% } %>
    <% if (qobj.dAns && qobj.answer == 'd') { %>
        <tr><td> <%- radio_tag('multiChoiceCorrectAnswer','d', {checked: true}) %> </td><td> Choice D: </td> <td> <%- text_field_tag('dAns',{value:qobj.dAns, size:60}) %> </td></tr>
        <% } else  { %>
        <tr><td> <%- radio_tag('multiChoiceCorrectAnswer','d') %> </td><td> Choice D: </td> <td> <%- text_field_tag('dAns',{value:qobj.dAns, size:60}) %>  </td></tr>
        <br/>
        <% } %>

    <% if (qobj.eAns && qobj.answer == 'e') { %>
        <tr><td> <%- radio_tag('multiChoiceCorrectAnswer','e', {checked: true}) %> </td><td> Choice E: </td> <td> <%- text_field_tag('eAns',{value:qobj.eAns, size:60}) %> </td></tr>
        <% } else  { %>
        <tr><td> <%- radio_tag('multiChoiceCorrectAnswer','e') %> </td><td> Choice E: </td> <td> <%- text_field_tag('eAns',{value:qobj.eAns, size:60}) %>  </td></tr>
        <br/>
        <% } %>


        </table>
