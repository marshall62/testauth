        <% } else  { %>
        <tr><td> <%- radio_tag('multiChoiceCorrectAnswer','b') %> </td><td> Choice B: </td> <td> <%- text_field_tag('bAns',{value:qobj.bAns, size:60}) %>  </td></tr>
        <br/>
