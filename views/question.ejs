        <% if (!qobj.answer) { %>
        <%- radio_tag('multiChoiceCorrectAnswer','noneCorrect', {'checked': true}) %> There is no correct answer
        <% } else { %>
        <%- radio_tag('multiChoiceCorrectAnswer','noneCorrect') %> There is no correct answer
        <% } %>
<br/>
    </div>


